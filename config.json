{
  "game": "The Crew Motorfest",
  "description": "Updated with accurate default controller bindings from game screenshots",
  "suppression": {
    "enabled": true,
    "toggle_key": "END",
    "description": "Press END to toggle keyboard suppression ON/OFF while running"
  },
  "controller_mappings": {
    "analog": {
      "RoadThrottle": {
        "keyboard_key": "W",
        "drunkdeer_key": "W",
        "controller": "RIGHT_TRIGGER",
        "controller_button": "RT",
        "description": "Throttle/Accelerate"
      },
      "RoadBrake": {
        "keyboard_key": "S",
        "drunkdeer_key": "S",
        "controller": "LEFT_TRIGGER",
        "controller_button": "LT",
        "description": "Brake"
      },
      "RoadSteerLeft": {
        "keyboard_key": "A",
        "drunkdeer_key": "A",
        "controller": "LEFT_STICK_X_NEGATIVE",
        "controller_button": "LS Left",
        "description": "Steer Left"
      },
      "RoadSteerRight": {
        "keyboard_key": "D",
        "drunkdeer_key": "D",
        "controller": "LEFT_STICK_X_POSITIVE",
        "controller_button": "LS Right",
        "description": "Steer Right"
      },
      "LookLeft": {
        "drunkdeer_index": 119,
        "controller": "RIGHT_STICK_X_NEGATIVE",
        "controller_button": "RS Left",
        "description": "Camera/Look Left (Physical LEFT = Index 119)"
      },
      "LookRight": {
        "drunkdeer_index": 121,
        "controller": "RIGHT_STICK_X_POSITIVE",
        "controller_button": "RS Right",
        "description": "Camera/Look Right (Physical RIGHT = Index 121)"
      },
      "LookUp": {
        "drunkdeer_index": 98,
        "controller": "RIGHT_STICK_Y_POSITIVE",
        "controller_button": "RS Up",
        "description": "Camera/Look Up (Physical UP = Index 98)"
      },
      "LookDown": {
        "drunkdeer_index": 120,
        "controller": "RIGHT_STICK_Y_NEGATIVE",
        "controller_button": "RS Down",
        "description": "Camera/Look Down (Physical DOWN = Index 120)"
      },
      "RoadLeanForward": {
        "drunkdeer_index": 58,
        "controller": "LEFT_STICK_Y_POSITIVE",
        "controller_button": "LS Up",
        "description": "Lean Forward (Physical UP = Index 97)"
      },
      "RoadLeanBackward": {
        "drunkdeer_index": 79,
        "controller": "LEFT_STICK_Y_NEGATIVE",
        "controller_button": "LS Down",
        "description": "Lean Backward (Physical DOWN = Index 120)"
      }
    },
    "buttons": {
      "Nitro": {
        "keyboard_key": "LSHIFT",
        "drunkdeer_key": "SHF_L",
        "controller": "A_BUTTON",
        "controller_button": "A",
        "description": "Nitro Boost"
      },
      "BackOnTrack": {
        "keyboard_key": "R",
        "drunkdeer_key": "R",
        "controller": "Y_BUTTON",
        "controller_button": "Y",
        "description": "Reset/Back on Track"
      },
      "RoadHandBrake": {
        "keyboard_key": "SPACE",
        "drunkdeer_key": "SPACE",
        "controller": "X_BUTTON",
        "controller_button": "X",
        "description": "Handbrake"
      },
      "LightCallHorn": {
        "keyboard_key": "H",
        "drunkdeer_key": "H",
        "controller": "LEFT_STICK_CLICK",
        "controller_button": "LS Click",
        "description": "Horn/Flash Lights"
      },
      "PlayerAssistant": {
        "keyboard_key": "C",
        "drunkdeer_key": "C",
        "controller": "DPAD_UP",
        "controller_button": "D-Pad Up",
        "description": "Personal Assistant"
      },
      "NextCam": {
        "keyboard_key": "V",
        "drunkdeer_key": "V",
        "controller": "DPAD_RIGHT",
        "controller_button": "D-Pad Right",
        "description": "Change Camera"
      },
      "LaunchPhotoMode": {
        "keyboard_key": "P",
        "drunkdeer_key": "P",
        "controller": "DPAD_LEFT",
        "controller_button": "D-Pad Left",
        "description": "Photo Mode"
      },
      "MainMenu": {
        "keyboard_key": "ESCAPE",
        "drunkdeer_key": "ESC",
        "controller": "START_BUTTON",
        "controller_button": "Menu/Start",
        "description": "Pause Menu"
      },
      "FastFavToggle": {
        "keyboard_key": "F",
        "drunkdeer_key": "F",
        "controller": "RIGHT_STICK_Y_NEGATIVE_BUTTON",
        "controller_button": "RS Down (Hold)",
        "description": "Fast Fav Toggle",
        "note": "This is RS Down as a button press, not analog"
      },
      "GoogleMap": {
        "keyboard_key": ",",
        "drunkdeer_key": "COMMA",
        "controller": "BACK_BUTTON",
        "controller_button": "Back",
        "description": "Google Map"
      },
      "BoatSteerLeft": {
        "keyboard_key": "Q",
        "drunkdeer_key": "Q",
        "controller": "LEFT_BUMPER",
        "controller_button": "LB",
        "description": "Boat Steer Left"
      },
      "BoatSteerRight": {
        "keyboard_key": "E",
        "drunkdeer_key": "E",
        "controller": "RIGHT_BUMPER",
        "controller_button": "RB",
        "description": "Boat Steer Right"
      }
    }
  }
}
